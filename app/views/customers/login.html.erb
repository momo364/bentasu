<% if flash.alert %><p class ="alert"><%= flash.alert %></p><% end %>
<p>お客様ログインページ</p>
<%= form_tag :session_customer do %>
<table id = "login_form">
  <tr>
    <td style="text-align:right">ユーザ名：</td>
    <td><%= text_field_tag "username","",style: "width: 200px" %></td>
  </tr>
  <tr>
    <td style="text-align:right">パスワード：</td>
    <td><%= password_field_tag "password","",style: "width: 200px" %></td>
  </tr>
  <tr>
    <td colspan="2" style="text-align:center">
    <%= submit_tag "ログイン" %></td>
  </tr>
</table>
<% end %> 